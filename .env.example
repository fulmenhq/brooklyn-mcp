# Brooklyn MCP Server Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Service Identity
BROOKLYN_SERVICE_NAME=fulmen-brooklyn
BROOKLYN_DISPLAY_NAME="Fulmen MCP Brooklyn"
BROOKLYN_VERSION=1.0.0
BROOKLYN_ENVIRONMENT=development

# Port Configuration - Brooklyn reserves 50xxx range
BROOKLYN_MCP_PORT=50000
BROOKLYN_HEALTH_PORT=50001
BROOKLYN_METRICS_PORT=50002
BROOKLYN_ADMIN_PORT=50003

# =============================================================================
# BROWSER AUTOMATION SETTINGS
# =============================================================================

# Browser Pool Configuration
BROOKLYN_MAX_BROWSERS=10
BROOKLYN_BROWSER_TIMEOUT=30000
BROOKLYN_HEADLESS=true
BROOKLYN_BROWSER_CLEANUP_INTERVAL=300000

# Playwright Configuration
BROOKLYN_PLAYWRIGHT_TIMEOUT=30000
BROOKLYN_PLAYWRIGHT_NAVIGATION_TIMEOUT=30000
BROOKLYN_PLAYWRIGHT_EXPECT_TIMEOUT=10000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting
BROOKLYN_RATE_LIMIT_REQUESTS=100
BROOKLYN_RATE_LIMIT_WINDOW=60000
BROOKLYN_RATE_LIMIT_ENABLED=true

# Domain Access Control
BROOKLYN_ALLOWED_DOMAINS="localhost,127.0.0.1,*.example.com"
BROOKLYN_DOMAIN_VALIDATION_ENABLED=true

# Team Isolation
BROOKLYN_TEAM_ISOLATION_ENABLED=true
BROOKLYN_DEFAULT_TEAM_MAX_BROWSERS=5

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
BROOKLYN_LOG_LEVEL=info
BROOKLYN_LOG_FORMAT=json
BROOKLYN_LOG_FILE_ENABLED=false
BROOKLYN_LOG_FILE_PATH=./logs/brooklyn.log

# Metrics and Health
BROOKLYN_METRICS_ENABLED=true
BROOKLYN_HEALTH_CHECK_INTERVAL=30000
BROOKLYN_PROMETHEUS_METRICS=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
BROOKLYN_DEV_MODE=false
BROOKLYN_HOT_RELOAD=true
BROOKLYN_DEBUG_MODE=false

# Testing Configuration
BROOKLYN_TEST_MODE=false
BROOKLYN_MOCK_BROWSERS=false
BROOKLYN_TEST_TIMEOUT=60000

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Communication Platforms (Optional)
BROOKLYN_SLACK_WEBHOOK_URL=
BROOKLYN_SLACK_BOT_TOKEN=
BROOKLYN_MATTERMOST_WEBHOOK_URL=
BROOKLYN_MATTERMOST_ACCESS_TOKEN=

# File System
BROOKLYN_CONFIG_PATH=./configs
BROOKLYN_TEMP_PATH=./temp
BROOKLYN_SCREENSHOTS_PATH=./screenshots

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Resource Management
BROOKLYN_MEMORY_LIMIT=2048
BROOKLYN_CPU_LIMIT=4
BROOKLYN_DISK_CLEANUP_ENABLED=true
BROOKLYN_DISK_CLEANUP_INTERVAL=3600000

# Plugin System (Future)
BROOKLYN_PLUGINS_ENABLED=true
BROOKLYN_PLUGINS_PATH=./plugins
BROOKLYN_PLUGIN_TIMEOUT=30000

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Production Example:
# BROOKLYN_ENVIRONMENT=production
# BROOKLYN_MCP_PORT=50000
# BROOKLYN_MAX_BROWSERS=25
# BROOKLYN_HEADLESS=true
# BROOKLYN_LOG_LEVEL=warn
# BROOKLYN_METRICS_ENABLED=true

# Development Example:
# BROOKLYN_ENVIRONMENT=development
# BROOKLYN_MCP_PORT=50000
# BROOKLYN_MAX_BROWSERS=5
# BROOKLYN_HEADLESS=false
# BROOKLYN_LOG_LEVEL=debug
# BROOKLYN_DEV_MODE=true

# Testing Example:
# BROOKLYN_ENVIRONMENT=test
# BROOKLYN_MCP_PORT=50100
# BROOKLYN_MAX_BROWSERS=2
# BROOKLYN_TEST_MODE=true
# BROOKLYN_MOCK_BROWSERS=true