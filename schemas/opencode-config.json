{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "mcp": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["local", "remote"] },
          "command": {
            "type": "array",
            "items": { "type": "string" }
          },
          "url": { "type": "string" },
          "enabled": { "type": "boolean" },
          "environment": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "required": ["type"],
        "oneOf": [
          {
            "properties": { "type": { "const": "local" }, "command": { "type": "array" } },
            "required": ["command"]
          },
          {
            "properties": { "type": { "const": "remote" }, "url": { "type": "string" } },
            "required": ["url"]
          }
        ]
      }
    },
    "tools": { "type": "object", "additionalProperties": { "type": ["boolean", "string"] } },
    "agent": { "type": "object", "additionalProperties": { "type": "object" } }
  },
  "additionalProperties": true
}
